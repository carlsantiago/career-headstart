{{> nav}}
<main>
    <section id="minibanner">
        <div class="mini-banner">
            <div class="container">
                <div class="row">
                    <h1>Listed Jobs</h1>
                </div>
            </div>
        </div>
    </section>
    <section id="job-listing-inner">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="job_listing">
                        <ul>
                            {{#each jobs as |job|}}
                            <li class="single-listing">
                                <a href="/job/{{id}}">
                                    <span class="job_listing-position">
                                        <h4>{{jobTitle}}</h4>
                                        <p>{{employer.companyName}}</p>
                                    </span>
                                    <span class="job_location">{{jobLocation}}</span>
                                    {{#ifEquals workLoad "Full Time"}}
                                    <span class="job_type"><small class="button-type fulltime">Full Time</small></span>
                                    {{/ifEquals}}
                                    {{#ifEquals workLoad "Casual"}}
                                    <span class="job_type"><small class="button-type parttime">Casual</small></span>
                                    {{/ifEquals}}
                                    {{#ifEquals workLoad "Freelance"}}
                                    <span class="job_type"><small class="button-type freelance">Freelance</small></span>
                                    {{/ifEquals}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>

                        <nav class="job_pagination" aria-label="Page navigation example">
                            <ul class="pagination justify-content-center"">
                      <li class=" page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{{> footer}}