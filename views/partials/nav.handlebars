                <a class="nav-link" href="/jobs">Jobs</a>
              </li>
              {{#if logged_in}}
              <li class="nav-item">
                <span class="avatar-img">
                <img
                  alt=""
                  src="https://secure.gravatar.com/avatar/e1366724d9b66b00d71a6aa17ac47e02?s=40&#038;d=mm&#038;r=g"
                  class="avatar"
                />
                </span>
                <a class="nav-link" href="/profile" class="user-account">Profile</a>
              </li>
              <li class="nav-item icon-power">
                <a class="nav-link icon-power" href="/logout">Logout</a>
              </li>
              {{else}}
              <li class="nav-item">
                <a class="nav-link icon-power" href="/login">Log in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link icon-power" href="/signup">Sign up</a>
              </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
