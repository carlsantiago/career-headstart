{{> nav}}

<main>
    <section id="dashboard">
        <div class="container-full h-100 d-flex">
            <div class="dashboard-nav">
                <div class="dashboard-profile-box">
                    <h2>Welcome, <span>{{firstName}}</span></h2>
                </div>
                <div class="dashboard-main-nav">
                    <ul>
                        <li>
                            <a href="/dashboard"><i class="fas fa-fw fa-cog"></i>Dashboard</a>
                        </li>
                        <li>
                            <a href="/profile"><i class="fas fa-fw fa-user"></i>My Profile</a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="dashboard-main-page">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="job-applied">
                            <h2>Applied Job</h2>
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Job Title</th>
                                        <th>Location</th>
                                        <th>Work Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each applications as |application|}}
                                    <tr>
                                        <td><a href="/job/{{id}}">{{application.jobTitle}}</a></td>
                                        <td>{{jobLocation}}</td>
                                        <td>{{workLoad}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{{> footer}}